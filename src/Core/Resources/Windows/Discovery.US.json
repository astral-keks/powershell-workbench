{
  //Non-recursive shortcut discovery rules
  "Dynamic": [
    {
      //Directory to search shortcuts in
      "RootDirectory": "{$Userspace}\\Template",
      //Value for shortcut part after @ character
      "Location": "Userspace",
      //Pattern for paths which shortcut should be created for
      "PathPattern": ".+"
    },
    {
      "RootDirectory": "{$Userspace}\\Config",
      "Location": "Userspace",
      "PathPattern": "{$Userspace}\\Config\\.+\\"
    }
  ],
  //Non-recursive shortcut discovery rules
  "Synchronized": [
    //The same structure here as in Dynamic section
  ]
}