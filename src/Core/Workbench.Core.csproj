<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net462</TargetFramework>
    <AssemblyName>AstralKeks.Workbench.Core</AssemblyName>
    <RootNamespace>AstralKeks.Workbench.Core</RootNamespace>
    <OutputPath>..\..\artifact</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Windows\.+.psd1" />
    <None Remove="Resources\Windows\.gitignore" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Windows\.+.psd1" />
    <EmbeddedResource Include="Resources\Windows\.gitignore" />
    <EmbeddedResource Include="Resources\Windows\Workspace.bat" />
    <EmbeddedResource Include="Resources\Windows\Workspace.json" />
    <EmbeddedResource Include="Resources\Windows\Application.json" />
    <EmbeddedResource Include="Resources\Windows\Toolkit.json" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\Windows\.+.Command.csproj" />
    <EmbeddedResource Include="Resources\Windows\.+.Core.csproj" />
    <EmbeddedResource Include="Resources\Windows\.+.sln" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="10.0.2" />
  </ItemGroup>

</Project>