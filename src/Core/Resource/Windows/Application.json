// Applications
[
  {
    // Application name as well as PowerShell alias
    "Name": "Editor",

    // Path to application executable
    "Executable": "C:\\Program Files (x86)\\Microsoft VS Code\\Code.exe",

    // Application commands
    "Commands": [
      {
        // This command is used if no command name is specified when starting the application
        "Name": "Default",

        // Arguments to pass to executable when starting the application
        "Arguments": "{$Pipeline} {$Args}",
        // Macro variables
        // {$Bin}      - path to workbench installation directory
        // {$User}     - `%LOCALAPPDATA%`
        // {$Args}     - arguments passed when starting application
        // {$Pipeline} - single value from pipeline passed when starting application

        // Use operating system shell to start the application
        "UseShellExecute": false,

        // Wait for the application to exit
        "WaitForExit": false
      },
      {
        "Name": "Workspace", // Used by Workspace Start command in launcher
        "Arguments": ".",
        "UseShellExecute": false,
        "WaitForExit": false
      }
    ]
  },
  {
    "Name": "Terminal",
    "Executable": "C:\\WINDOWS\\system32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "Commands": [
      {
        "Name": "Default",
        "Arguments": "",
        "UseShellExecute": true,
        "WaitForExit": false
      },
      {
        "Name": "Workspace", // Used by Workspace Start command in launcher
        "Arguments": "-NoExit -File \"{$Bin}\\Initialize-Workbench.ps1\"",
        "UseShellExecute": false,
        "WaitForExit": true
      }
    ]
  },
  {
    "Name": "IDE",
    "Executable": "C:\\Program Files (x86)\\Microsoft Visual Studio 14.0\\Common7\\IDE\\devenv.exe",
    "Commands": [
      {
        "Name": "Default",
        "Arguments": "{$Pipeline} {$Args}",
        "UseShellExecute": false,
        "WaitForExit": false
      }
